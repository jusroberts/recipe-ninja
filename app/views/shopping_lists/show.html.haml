%p#notice= notice

.row
  %h1= @shopping_list.title
.row
  .columns.small-3.medium-2.large-1.recipes Recipes:
  .columns.small-9.medium-10.large-11
    - @shopping_list.recipes.each do |recipe|
      .columns=link_to recipe.url, recipe.url
.row.ingredients_list
  -@ingredient_list.each do |ingredient|
    .row
      .list_entry=ingredient
%br
.row
  .columns.small-2= link_to 'Back', shopping_lists_path, class: 'button'
  .columns.small-2= link_to 'Destroy', @shopping_list, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'button'
